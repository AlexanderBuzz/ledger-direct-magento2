<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="ledger_direct" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1">
                <label>Ledger Direct / XRPL</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="use_testnet" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>Use Testnet</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="xrpl_testnet_account" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1">
                    <label>Account (Testnet)</label>
                </field>
                <field id="xrpl_testnet_token_name" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1">
                    <label>Token Name (Testnet)</label>
                </field>
                <field id="xrpl_testnet_token_issuer" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1">
                    <label>Token Issuer (Testnet)</label>
                </field>
                <field id="xrpl_mainnet_account" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1">
                    <label>Account (Mainnet)</label>
                </field>
                <field id="xrpl_mainnet_token_name" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1">
                    <label>Token Name (Mainnet)</label>
                </field>
                <field id="xrpl_mainnet_token_issuer" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1">
                    <label>Token Issuer (Mainnet)</label>
                </field>
            </group>
        </section>
    </system>
</config>
